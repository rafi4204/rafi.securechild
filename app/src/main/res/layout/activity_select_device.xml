<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rafiw.securechild.selectDevice"
    android:background="@color/colorAccent"
    >

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center"

        app:lottie_autoPlay="true"
        app:lottie_fileName="servishero_loading.json"
        app:lottie_loop="true"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="2dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="335dp"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="6dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="please select device type"
            android:gravity="center"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/parent_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="parent's device"
            android:textColor="@color/colorAccent"
            android:layout_margin="20dp"
            android:background="@color/colorbutton"
            />

        <Button
            android:id="@+id/child_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Child's Device"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorAccent"

            android:background="@color/colorbutton"


            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
